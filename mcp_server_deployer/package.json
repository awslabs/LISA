    "@aws-sdk/client-iam": "^3.490.0",
    "aws-cdk": "^2.153.0",
    "aws-cdk-lib": "^2.185.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "esbuild": "^0.25.1",
    "@cdklabs/cdk-enterprise-iac": "^0.0.512",
    "@types/aws-lambda": "8.10.147",
    "@types/node": "^22.4.1"
  }
}
