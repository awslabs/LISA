{
  "name": "awslabs-lisa",
  "version": "6.2.1",
  "description": "A scalable infrastructure-as-code solution for self-hosting and orchestrating LLM inference with RAG capabilities, providing low-latency access to generative AI and embedding models across multiple providers.",
  "keywords": [
    "aws",
    "bedrock",
    "chatbot",
    "generative-ai",
    "langchain",
    "litellm",
    "llm",
    "large-language-model",
    "openai",
    "rag",
    "retrieval-augmented-generation"
  ],
  "homepage": "https://awslabs.github.io/LISA/",
  "bugs": {
    "url": "https://github.com/awslabs/lisa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awslabs/lisa.git"
  },
  "license": "Apache-2.0",
  "author": "Amazon Web Services (https://aws.amazon.com)",
  "type": "commonjs",
  "main": "jest.config.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "VERSION",
    "bin",
    "lib",
    "lisa-sdk",
    "lambda",
    "scripts",
    "ecs_model_deployer",
    "vector_store_deployer",
    "dist"
  ],
  "workspaces": [
    "lib/user-interface/react",
    "lib/docs",
    "ecs_model_deployer",
    "vector_store_deployer",
    "mcp_server_deployer",
    "lib/core/layers/cdk",
    "cypress"
  ],
  "scripts": {
    "build": "tsc && npm run build -ws && if [ \"$BUILD_ASSETS\" = \"true\" ]; then npm run build:assets; fi",
    "build:assets": "./bin/build-assets",
    "deploy": "tsx ./bin/lisa.ts",
    "copy-dist": "cp VERSION ./dist/",
    "clean": "npm run clean -ws && rm -rf dist node_modules cdk.out build lib/rag/layer/TIKTOKEN_CACHE lib/serve/rest-api/TIKTOKEN_CACHE",
    "watch": "tsc -w",
    "test": "jest && npm run test -ws",
    "test:update-baselines": "jest --testPathPatterns=snapshot.test.ts -- --updateBaselines",
    "cdk": "cdk",
    "prepare": "husky || true",
    "postinstall": "patch-package",
    "dev": "cd lib/user-interface/react/ && npm run dev",
    "prepublishOnly": "BUILD_ASSETS=true npm run build && npm run copy-dist -ws",
    "migrate-properties": "node ./scripts/migrate-properties.mjs",
    "generateSchemaDocs": "npx zod2md -c ./lib/zod2md.config.ts && npx zod2md -c ./lib/zod2md.rag.ts",
    "generate-config": "tsx scripts/generate-config.ts"
  },
  "devDependencies": {
    "@aws-cdk/aws-lambda-python-alpha": "^2.238.0-alpha.0",
    "@aws-sdk/client-iam": "^3.948.0",
    "@aws-sdk/client-ssm": "^3.948.0",
    "@cdklabs/cdk-enterprise-iac": "^0.1.0",
    "@eslint/js": "^10.0.1",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/linkify-it": "^5.0.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.3.0",
    "@types/readline-sync": "^1.4.8",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "aws-cdk": "^2.1106.0",
    "depcheck": "^1.4.7",
    "esbuild": "^0.27.1",
    "eslint": "^10.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lightningcss": "^1.30.2",
    "lint-staged": "^16.2.7",
    "readline-sync": "^1.4.10",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "wait-on": "^9.0.3",
    "zod2md": "^0.2.4"
  },
  "dependencies": {
    "@aws-sdk/util-dynamodb": "^3.948.0",
    "aws-cdk-lib": "^2.238.0",
    "aws-sdk": "^2.1693.0",
    "cdk-ecr-deployment": "^4.0.5",
    "cdk-nag": "^2.37.55",
    "constructs": "^10.4.3",
    "js-yaml": "^4.1.1",
    "lodash": "^4.17.21",
    "source-map-support": "^0.5.21",
    "util": "^0.12.5",
    "zod": "^4.1.13"
  },
  "peerDependencies": {
    "@cfworker/json-schema": "^4.1.0",
    "@types/lodash": "^4.17.14",
    "micromark": "4.0.0",
    "micromark-core-commonmark": "2.0.1"
  },
  "overrides": {
    "@modelcontextprotocol/sdk": "^1.24.0",
    "esbuild": "^0.27.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalSpecifiers": true
  }
}
