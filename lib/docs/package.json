{
  "name": "lisa-docs",
  "private": true,
  "version": "1.0.0",
  "description": "Documentation of LISA",
  "scripts": {
    "prebuild": "(cd ../../ && npm run generateSchemaDocs)",
    "build": "npm run docs:build && npm run copy-dist",
    "copy-dist": "mkdir -p ../../dist/docs && cp -r ./dist/* ../../dist/docs/",
    "docs:dev": "vitepress dev .",
    "docs:build": "vitepress build .",
    "docs:preview": "vitepress preview .",
    "clean": "rm -rf ./dist ./node_modules",
    "test": "echo \"No tests for documentation package\""
  },
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "vitepress": "^1.6.4",
    "vitepress-plugin-tabs": "^0.8.0"
  }
}
