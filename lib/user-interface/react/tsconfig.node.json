{
  "compilerOptions": {
    "composite": true,
    "types": [
      "node",
      "linkify-it"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "#root/*": [
        "../../../*"
      ]
    },
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "jsx": "react-jsx"
  },
  "include": ["vite.config.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "styles.d.ts", "../../schema"]
}
