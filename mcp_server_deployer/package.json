{
  "name": "mcp_server_deployer",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "node esbuild.js && npm run copy-assets && npm run pack:prod && npm run copy-dist",
    "copy-assets": "cp package.json ./src/cdk*json ../VERSION ./dist && mkdir -p ./dist/lib/scripts && cp -r ./src/lib/scripts/* ./dist/lib/scripts/",
    "pack:prod": "cd ./dist && npm i --omit dev",
    "copy-dist": "mkdir -p ../dist/mcp_server_deployer && cp -r ./dist/* ../dist/mcp_server_deployer/",
    "clean": "rm -rf ./dist ./node_modules",
    "test": "echo \"Error: no test specified\""
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@aws-sdk/client-iam": "^3.940.0",
    "aws-cdk": "^2.1033.0",
    "aws-cdk-lib": "^2.230.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "esbuild": "^0.27.0",
    "@cdklabs/cdk-enterprise-iac": "^0.1.0",
    "@types/aws-lambda": "8.10.159",
    "@types/node": "^24.10.1"
  }
}
