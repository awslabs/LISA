{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020", "dom"],
    "types": [
      "node",
      "jest",
      "linkify-it"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "dist/"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifiers": true,
    "nodeRegistration": {
      "experimentalSpecifierResolution": "node"
    }
  },
  "exclude": ["node_modules", "build", "cdk.out", ".git", "dist", "test", "lib/user-interface/react", "coverage", "package.json"],
  "include": ["lib/**/*", "lib/**/*.json", "bin/*", "VERSION"]
}
